---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog" description="Blog posts">
  <section>
    <ul class="flex flex-col gap-8 mt-8">
      {
        posts.map((post) => (
          <li class="mb-8 w-fit mx-auto">
            <a href={`/blog/${post.id}/`} class="hover:opacity-80 transition">
              <img width={720} height={360} src={post.data.heroImage} alt="" />
              <h4 class="title text-2xl font-bold mt-4">{post.data.title}</h4>
              <p class="date">
                <FormattedDate date={post.data.pubDate} />
              </p>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
